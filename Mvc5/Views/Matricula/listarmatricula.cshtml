@model IEnumerable<Domain.Matricula>

    @{
        ViewBag.Title = "listarmatricula";
    }

 
<table class="table">
    <tr>
        <th>
            Matricula
        </th>
        <th>
            Alumno
        </th>
        <th>
            Apoderado
        </th>
        <th>
            Aula
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Alumno.Apellidos),
          
                @Html.DisplayFor(modelItem => item.Alumno.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apoderado.Apellidos),
                
                @Html.DisplayFor(modelItem => item.Apoderado.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seccion.Grado.Nombre)
                @Html.DisplayFor(modelItem => item.Seccion.Nombre) -
                @Html.DisplayFor(modelItem => item.Seccion.Grado.Nivel.Nombre)
            </td>
            <td>
                <div class="btn-group">
                    <a href="@Url.Action("Edit", new { id = item.MatriculaId })" title="Edit"
                       style="margin-right: 3px;">
                        <i class="glyphicon glyphicon-pencil"></i>
                        <span class="sr-only">Edit</span>
                    </a>
                    @*<a href="@Url.Action("Details", new { id = item.Id })" title="Details"
                           style="margin-right: 3px;">
                            <i class="glyphicon glyphicon-list-alt"></i>
                            <span class="sr-only">Details</span>
                        </a>*@
                </div>
            </td>
        </tr>
    }
</table>

