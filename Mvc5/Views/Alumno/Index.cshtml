@model IEnumerable<Domain.Alumno>

@{
    ViewBag.Title = "Index";
    //Layout = null;
}
<center>
    <br />
    <br />
    <FONT FACE="impact" SIZE=2 COLOR="White">
        <h1>REGISTRO DE ALUMNOS</h1>
        
    </FONT>
  
    <br />
</center>



@using (Html.BeginForm("Index","Alumno",FormMethod.Get))
{     
    <div class="form-inline">

        @Html.Label("Criterio :")
        @Html.TextBox("criterio","",new { @class="form-control"})
        <button type="submit" class="btn btn-danger">Buscar</button>
       @Html.ActionLink("Create New", "Create",new { }, new { @class = "btn btn-success" })
    </div>
    <br />
}
    

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dni)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaNacimiento)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Genero)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Celular)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
      
        <th></th>
    </tr>

@foreach (var item in Model) {
   
    <tr >
        <td>
            @Html.DisplayFor(modelItem => item.Nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dni)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaNacimiento)
        </td>
     
        <td >
            @Html.DisplayFor(modelItem => item.Genero)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Celular)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Direccion)
        </td>
     
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.AlumnoId }) |
            @Html.ActionLink("Details", "Details", new { id=item.AlumnoId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AlumnoId })*@
            <a href="@Url.Action("Edit", new { id = item.AlumnoId })" title="Edit"
               style="margin-right: 3px;"
               class="btn btn-warning btn-sm">
                <i class="glyphicon glyphicon-pencil"></i>
                <span class="sr-only">Edit</span>
            </a>
            <a href="@Url.Action("Details", new { id = item.AlumnoId })" title="Details"
               style="margin-right: 3px;"
               class="btn btn-primary btn-sm">
                <i class="glyphicon glyphicon-list-alt"></i>
                <span class="sr-only">Details</span>
            </a>
            <a href="@Url.Action("Delete", new { id = item.AlumnoId })" title="Delete"
               style="margin-right: 3px;"
               class="btn btn-danger btn-sm">
                <i class="glyphicon glyphicon-trash"></i>
                <span class="sr-only">Delete</span>
            </a>
        </td>

        
    </tr>
}

</table>
